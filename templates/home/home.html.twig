{% extends 'base.html.twig' %}

{% block stylesheets %}
	<!-- CUSTOM CSS -->
	<link rel="stylesheet" href="{{ asset('styles/style.css') }}">
{% endblock %}

{% block page_content %}
	<div class="row h-fill py-0 mt-1">
		{# COL 1 #}
		{% if user_warehouses %}
			<div class="col-2">
				<div class="d-flex row text-light h-100 py-1">
					{# Dashboard #}
					<div class="col cstm-card h-100 mx-1">
						<p>Dashboard</p>
						{% include "/shared_templates/dashboard_menu.html.twig" %}
					</div>
				</div>
			</div>
		{% endif %}
		{# COL 2 #}
		<div class="col d-flex flex-column">
			{# COL 2 ROW 1 #}
			<div class="row h-fill py-0">
				<div class="row text-light py-1">
					<div id="my_warehouses" class="col cstm-card h-100 mx-1">
						<p class="bg-cstm-blue pb-2 mb-0">My Warehouses</p>
						<div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-4 justify-content-evenly bg-light overflow-hidden">
							{% for one_warehouse in user_warehouses %}
								{% if one_warehouse.getWarehouseName != 'ALL_DATA' %}
									<a class="col p-1 title cstm-bluedark" href={{ path("warehouse_detail", {'id': one_warehouse.getId}) }}>
										<div class="card bg-cstm-light ">
											<p class="row my-0 cstm-darkBlue mx-auto title-bold">{{ one_warehouse.getWarehouseName }}</p>
											<hr class="w-75 mx-auto">
											<p class="row ps-3 my-0 cstm-darkBlue">{{ one_warehouse.getWarehouseAddressNumber ~ ' ' ~ one_warehouse.getWarehouseAddressRoad ~ ' ' ~ one_warehouse.getWarehouseAddressPostalCode ~ ' ' ~ one_warehouse.getWarehouseAddressCity }}</p>
											<p class="row ps-3 my-0 cstm-darkBlue">{{ one_warehouse.getWarehouseAddressState ~ ' ' ~ one_warehouse.getWarehouseAddressCountry }}</p>
											<p class="row ps-3 my-0 cstm-darkBlue">{{ one_warehouse.getWarehousePhone }}</p>
										</div>
									</a>
								{% endif %}
							{% endfor %}
						</div>
					</div>
				</div>
			</div>
		</div>
{% endblock %}
