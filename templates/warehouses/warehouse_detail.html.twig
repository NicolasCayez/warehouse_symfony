{% extends 'base.html.twig' %}

{% block stylesheets %}
	<!-- CUSTOM CSS -->
	<link rel="stylesheet" href="{{ asset('styles/style.css') }}">
{% endblock %}

{% block page_content %}
	<div class="row h-fill py-0 mt-1">
		{# COL 1 #}
		<div class="col-2">
			<div class="d-flex row text-light h-100 py-1">
				{# Dashboard #}
				<div class="col cstm-card h-100 mx-1">
					<p>Dashboard</p>
					{% include "/shared_templates/dashboard_menu.html.twig" %}

				</div>
			</div>
		</div>
		{# COL 2 #}
		<div class="col">
			{# COL 2 ROW 1 #}
			<div class="row text-light h-100 py-1">
				{# COL 2 ROW 1 CARD 1 #}
				<div class="col cstm-card h-100 mx-1">
					<p>Warehouse detail</p>
					<div class="row">
						<div class="col mx-1">
							<div class="card bg-cstm-light ">
								<p class="row my-0 cstm-darkBlue mx-auto title-bold">{{ warehouse.getWarehouseName }}</p>
								<hr class="w-75 mx-auto">
								<p class="row ps-3 my-0 cstm-darkBlue">{{ warehouse.getWarehouseAddressNumber ~ ' ' ~ warehouse.getWarehouseAddressRoad ~ ' ' ~ warehouse.getWarehouseAddressPostalCode ~ ' ' ~ warehouse.getWarehouseAddressCity }}</p>
								<p class="row ps-3 my-0 cstm-darkBlue">{{ warehouse.getWarehouseAddressState ~ ' ' ~ warehouse.getWarehouseAddressCountry }}</p>
								<p class="row ps-3 my-0 cstm-darkBlue">{{ warehouse.getWarehousePhone }}</p>
							</div>
						</div>
						<div class="col mx-1">
						</div>
					</div>
					<div class="row mt-1">
						<div class="col mx-1">
							<div class="card bg-cstm-light ">
								<p class="row my-0 cstm-darkBlue mx-3 title-bold">Stock</p>
								<div class="bg-light overflow-auto vh-60">
									<table class="table table-sm table-striped-columns table-hover table-responsive pb-2">
										<thead>
											<tr class="m-0 ps-1 text-center">
												<th scope="col" class="title">Product Name</th>
												<th scope="col" class="title">Serial</th>
												<th scope="col" class="title">Ref</th>
												<th scope="col" class="title">Ref 2</th>
												<th scope="col" class="title">Value</th>
												<th scope="col" class="title">Stock</th>
											</tr>
										</thead>
										<tbody>
											{% for one_product in warehouse_products %}
												<tr class="m-0 ps-1">
													<td class="title cstm-darkBlue">{{ one_product.getProductName }}</td>
													<td class="title cstm-darkBlue">{{ one_product.getProductSerialNumber }}</td>
													<td class="title cstm-darkBlue">{{ one_product.getProductRef }}</td>
													<td class="title cstm-darkBlue">{{ one_product.getProductRef2 }}</td>
													<td class="title cstm-darkBlue text-end">{{ one_product.getProductValue }} â‚¬</td>
													<td class="title cstm-darkBlue text-end">{{ one_product.getProductQuantity(utils, warehouse) }}</td>
												</tr>
											{% endfor %}
										</tbody>
									</table>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
