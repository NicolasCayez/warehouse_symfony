{% extends 'base.html.twig' %}

{% block stylesheets %}
	<!-- CUSTOM CSS -->
	<link rel="stylesheet" href="{{ asset('styles/style.css') }}">
{% endblock %}

{% block page_content %}
	<div class="row h-fill py-0 mt-1">
		{# COL 1 #}
		<div class="col-2">
			<div class="d-flex row text-light h-100 py-1">
				{# Dashboard #}
				<div class="col cstm-card h-100 mx-1">
					<p>Dashboard</p>
					{% include "/shared_templates/dashboard_menu.html.twig" %}
				</div>
			</div>
		</div>
		{# COL 2 #}
		<div class="col d-flex flex-column">
			{# COL 2 ROW 1 #}
			<div class="row text-light py-1 h-fill">
				{# COL 2 ROW 1 COL 1 #}
				<div class="col d-flex flex-column text-light h-100">
					<div class="cstm-card mx-1 h-100">
						<p>New stock transfert</p>
						<div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 mt-5">
							<div class="col mx-auto">
								{{ form_start(form_new_transfert, {'attr': {'class': ''}}) }}
									{# From #}
									<div class="row row-cols-2">
										<div class="col-auto me-auto">
											<p>From warehouse :</p>
										</div>
										<div class="col-auto">
											<p class="bg-cstm-light cstm-bluedark px-3 py-1 rounded rounded-2">{{ warehouse.getWarehouseName }}</p>
										</div>
									</div>
									{# To #}
									<div class="row">
										<div class="col-auto me-auto">
											<p class="">to warehouse :</p>
										</div>
										<div class="col-auto">
											{{ form_row(form_new_transfert.warehouse_destination, {'label': false}) }}
										</div>
									</div>
									{# Message #}
									<div class="row">
										Stock transfert message
									</div>
									<div class="row">
										{{ form_row(form_new_transfert.stock_transfert_message, {'label': false, 'attr': {'class': 'w-100', 'rows': 5}}) }}
									</div>
									{# Submit #}
									<div class="row">
										{{ form_row(form_new_transfert.submit) }}
									</div>
									<div class="hidden">
										{{ form_row(form_new_transfert) }}
									</div>
								{{ form_end(form_new_transfert) }}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
